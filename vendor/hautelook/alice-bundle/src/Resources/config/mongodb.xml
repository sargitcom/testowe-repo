<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="hautelook_alice.doctrine.mongodb.fixtures_finder"
                 class="Hautelook\AliceBundle\Doctrine\Finder\FixturesFinder">
            <argument type="string">DataFixtures/ODM</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="hautelook_alice.doctrine.mongodb.loader_generator"
                 class="Hautelook\AliceBundle\Doctrine\Generator\LoaderGenerator">
            <argument type="service" id="hautelook_alice.doctrine.mongodb.fixtures_finder" />
        </service>

        <service id="hautelook_alice.doctrine.mongodb.command.load_command"
                 class="Hautelook\AliceBundle\Doctrine\Command\LoadDataFixturesCommand">
            <argument type="string">hautelook_alice:doctrine:mongodb:fixtures:load</argument>
            <argument type="service" id="doctrine_mongodb" />
            <argument type="service" id="hautelook_alice.fixtures.loader" />
            <argument type="service" id="hautelook_alice.alice.fixtures.loader" />
            <argument type="service" id="hautelook_alice.doctrine.mongodb.fixtures_finder" />
            <argument type="service" id="hautelook_alice.bundle_resolver" />
            <argument type="service" id="hautelook_alice.doctrine.mongodb.loader_generator" />
            <argument type="service" id="hautelook_alice.doctrine.executor.fixtures_executor" />
            <tag name="console.command" />
        </service>
    </services>

</container>
